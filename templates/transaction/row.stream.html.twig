{% if splitTransaction is defined %}
    {% set target = "split-transaction-list-item-" ~ splitTransaction.id  %}
{% else %}
    {% set target = "transaction-list-item-" ~ transaction.id  %}
{% endif %}
<turbo-stream action="update" target="{{ target }}">
    <template>
        {% if splitTransaction is defined %}
            {% include 'transaction/_row.html.twig' with { 'transaction': transaction, 'splitTransaction': splitTransaction } %}
        {% else %}
            {% include 'transaction/_row.html.twig' with { 'transaction': transaction } %}
        {% endif %}
    </template>
</turbo-stream>

