<div
    data-transaction-target="dropdown"
    class="z-10 absolute hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700"
>
    <form
        action="{{ path('app_transaction_set_category') }}"
        method="POST"
        data-transaction-target="dropdownForm"
    >
        <input data-transaction-target="dropdownTransactionValue" type="hidden" name="transactionId" value="" />
        <input data-transaction-target="dropdownSplitTransactionValue" type="hidden" name="splitTransactionId" value="" />
        <select
            class="bg-gray-50 border border-gray-300 text-gray-900 text-xs rounded focus:ring-blue-500 focus:border-blue-500 block w-full p-1 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            name="categoryId"
            data-action="change->transaction#submit"
            data-transaction-target="dropdownSelect"
        >
            <option value="">Please choose</option>
            {% for group in categoryGroups %}
                <optgroup label="{{ group.name }}">
                    {% for category in group.categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </optgroup>
            {% endfor %}
        </select>
    </form>
</div>