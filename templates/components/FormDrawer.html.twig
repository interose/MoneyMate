{% props
    allowSmallWidth=false,
    closeButton=false,
    padding="p-5",
    fixedTop=false
%}
<div
    {{ attributes.defaults({
        'data-controller': 'form-drawer',
        'data-action': 'turbo:before-cache@window->form-drawer#close',
        'class': 'fixed top-0 right-0 z-40 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-white w-80 dark:bg-gray-800',
        'id': 'drawer-right-example',
    }) }}
>
    {% block trigger %}{% endblock %}
    <div data-form-drawer-target="dialog">

        {% if closeButton %}
        <button
            type="button"
            data-action="form-drawer#close"
            class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 absolute top-2.5 end-2.5 inline-flex items-center justify-center dark:hover:bg-gray-600 dark:hover:text-white"
        >
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close menu</span>
        </button>
        {% endif %}

        {% block content %}{% endblock %}

        {% if block('loading_template') %}
            <template data-form-drawer-target="loadingContent">
                {% block loading_template %}{% endblock %}
            </template>
        {% endif %}
    </div>
</div>
